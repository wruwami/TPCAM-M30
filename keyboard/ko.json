{
  "locale":"kr",
  "layouts": [
    { "name":"lowercase",
        "keys":[["ㅂ", "ㅈ", "ㄷ", "ㄱ", "ㅅ", "ㅛ", "ㅕ", "ㅑ", "ㅐ", "ㅔ","?"],
               ["ㅁ", "ㄴ", "ㅇ", "ㄹ", "ㅎ", "ㅗ", "ㅓ", "ㅏ", "l","back"],
               ["Caps", "ㅋ", "ㅌ", "ㅊ", "ㅍ", "ㅠ", "ㅜ", "ㅡ","return"],
               ["123", ".", "space", "@",",",";"]]
    },
    { "name":"uppercase",
        "keys":[["ㅃ", "ㅉ", "ㄸ", "ㄲ", "ㅆ", "ㅛ", "ㅕ", "ㅑ", "ㅐ", "ㅔ","?"],
               ["ㅁ", "ㄴ", "ㅇ", "ㄹ", "ㅎ", "ㅗ", "ㅓ", "ㅏ", "l","back"],
               ["Caps", "ㅋ", "ㅌ", "ㅊ", "ㅍ", "ㅠ", "ㅜ", "ㅡ","return"],
               ["123", ".", "space", "@",",",";"]]
	},
    { "name":"numerical",
        "keys":[["1", "2", "3", "4", "5", "6", "7", "8", "9", "0","*"],
               ["-", "/", ":", ";", "(", ")", "€", "&", "@", "back"],
               ["#+=", ".", ",", "?", "!", "'", "+","\\","return"],
               ["ABC", ",", "space", ".", "\"","%"]]
    },
    { "name":"symbols",
            "keys":[[ "[", "]", "{", "}", "#", "%", "^", "*", "+", "=","\""],
                   ["_", "\\", "|", "~", "<", ">", "=","$", "@", "back"],
                   ["123", ".", ",", "?", "!", "'","/","&", "return"],
                   ["ABC", ",", "space", ".",":",";" ]]
    }
  ],
  "modifiers": [{ "keyspan":"back", "span":"2" },
                     { "keyspan":"Caps", "span":"2" },
                     { "keyspan":"Lowr", "span":"2" },
                     { "keyspan":"#+=", "span":"2" },
                     { "keyspan":"ABC", "span":"2" },
                     { "keyspan":"return", "span":"2" },
                     { "keyspan":"123", "span":"2" },
                     { "keyspan":"space", "span":"5" },
                     { "icon":"back", "path":":/keyboard/icons/backspace.png" },
                     { "icon":"Caps", "path":":/keyboard/icons/caps.png" },
                     { "icon":"return", "path":":/keyboard/icons/enter.png" },
                     { "icon":"Lowr", "path":":/keyboard/icons/lows.png" },
                     { "switchkey":"Caps", "layout":"uppercase" },
                     { "switchkey":"123", "layout":"numerical" },
                     { "switchkey":"Lowr", "layout":"lowercase" },
                     { "switchkey":"ABC", "layout":"lowercase" },
                     { "switchkey":"#+=", "layout":"symbols" }
                     ]
 }
